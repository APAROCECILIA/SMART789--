<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Routines">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height= "75dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:textSize="40sp"
            android:gravity="center"
            android:background="#FFEB3B"
            android:textColor="@color/white"
            android:textStyle="bold">
        </TextView>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="75dp"
            android:layout_marginLeft="340dp"
            android:src="@drawable/routinesicon"
            app:tint="#FAEEEE"
            android:scaleX="0.4"
            android:scaleY="0.4"
            android:layout_marginTop="10dp">
        </ImageView>
    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="150dp"
        android:src="@drawable/routines"
        app:tint="#6A6060"
        android:scaleX="0.6"
        android:scaleY="0.6"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginTop="250dp"
        android:text="No Routines!"
        android:textStyle="bold"
        android:textSize="25dp"
        android:gravity="center"
        android:textColor="#9C9999"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="95dp"
        android:layout_marginTop="300dp"
        android:text="click the '+' button below to get started"
        android:textSize="23dp"
        android:gravity="center"
        android:textColor="#A1A0A0"
        />
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="550dp"
        android:layout_marginLeft="290dp"
        android:backgroundTint="#3F51B5"
        app:icon="@drawable/plus"
        app:iconTint="@color/white">

    </com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton>

</FrameLayout>